extends ./layout/index
block contenido
    h1(class="text-center mt-5") #{pagina}.
    main.container.mt-5
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonial
                if (errores)
                    each error in errores
                        .alert.col.alert-danger.text-center #{error.msj}
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre:
                            input#nombre(type="text",placeholder="Ingrese su nombre",name="nombre", class="form-control",value= nombre)
                        .form-group
                            label(for="correo") Email:
                            input#correo(type="text",placeholder="Ingrese su email",name="correo", class="form-control", value= correo)
                        .form-group
                            label(for="correo") Mensaje:
                            textarea#mensaje(placeholder="Ingrese su mensaje",name="mensaje", class="form-control", rows=3)= mensaje 

                        input(type="submit",class="btn btn-success btn-block")

        